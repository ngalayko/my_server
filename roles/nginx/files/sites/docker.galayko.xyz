# Sentry reverse proxy config.

server {
    listen 443 ssl;
    server_name docker.galayko.xyz;
    # include /etc/nginx/ssl/thequestion.ru.conf;

    access_log  /var/log/nginx/docker.access.log;
    error_log   /var/log/nginx/docker.error.log;

    client_max_body_size 1000m;

    ssl_certificate /etc/letsencrypt/live/galayko.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/galayko.xyz/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/galayko.xyz/chain.pem;

    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 127.0.0.1 8.8.8.8;

    location /.well-known {
        root /var/www/html;
    }

    location / {
        default_type text/html;
        proxy_pass http://127.0.0.1:5000;
        proxy_redirect off;

        proxy_set_header Host              $http_host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
