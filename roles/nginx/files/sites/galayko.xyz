# galayko.xyz:80
server {
    listen *:80;
    server_name galayko.xyz;

    rewrite ^(.*) https://galayko.xyz$1;
}

# galayko.xyz:443
server {
    listen 443 ssl;
    server_name galayko.xyz;

    ssl_certificate /etc/letsencrypt/live/galayko.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/galayko.xyz/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/galayko.xyz/chain.pem;

    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 127.0.0.1 8.8.8.8;

    location / {
        default_type text/html;

        proxy_pass              http://127.0.0.1:3000;
        proxy_redirect          default;
        proxy_read_timeout      1200;
        proxy_connect_timeout   240;
    }
}
